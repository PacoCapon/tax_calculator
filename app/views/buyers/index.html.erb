<div class="container">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Buyers" %>

  <h1>Buyers</h1>

  <div id="buyers">
    <% @buyers.each do |buyer| %>
      <%= render buyer %>
      <p>
        <%= link_to "Show this buyer", buyer, class: "btn btn-success" %>
      </p>
    <% end %>
  </div>

  <%= link_to "New buyer", new_buyer_path, class: "btn btn-primary"  %>
</div>
