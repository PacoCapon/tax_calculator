<div class="container">
  <%= form_with(model: buyer) do |form| %>
    <div class="form-group">
      <%= form.label :name, style: "display: block", class: "control-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :buyer_type, "Buyer type", class: "control-label" %>
      <%= form.select :buyer_type, options_for_select([["Individual", "individual"], ["Company", "company"]]), { prompt: "Select the buyer type" }, class: "form-control" %>
    </div>  

    <div class="form-group">
      <%= form.label :country, "PaÃ­s", class: "control-label" %>
      <%= form.country_select :country, { priority_countries: ["ES"] }, { class: "form-control country-select" } %>
    </div>
    <br/>
    <div class="form-group">
      <%= form.submit "Save buyer", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
