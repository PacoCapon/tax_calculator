<div class="container">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Products" %>

  <h1>Products</h1>

  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p>
        <%= link_to "Show this product", product, class: "btn btn-success" %>
      </p>
    <% end %>
  </div>

  <%= link_to "New product", new_product_path, class: "btn btn-primary" %>
</div>
