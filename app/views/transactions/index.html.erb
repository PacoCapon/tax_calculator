<div class="container">
  <h1 class="mb-4">Transaction History</h1>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Buyer</th>
        <th scope="col">BuyerÂ´s Country</th>
        <th scope="col">Product</th>
        <th scope="col">VAT</th>
        <th scope="col">Type</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.buyer.name %> (<%= transaction.buyer.buyer_type.capitalize %>)</td>
          <td><%= transaction.country %></td>
          <td><%= transaction.product.name %> (<%= transaction.product.category.capitalize %>)</td>
          <td><%= transaction.vat %></td>
          <td><%= transaction.transaction_type %></td>
          <td><%= transaction.calculation_date.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @transactions.empty? %>
    <div class="alert alert-warning" role="alert">
      No transactions found.
    </div>
  <% end %>
</div>