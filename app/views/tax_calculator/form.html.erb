<div class="container">
  <h1>Calculadora de Impuestos</h1>
  <%= form_with url: tax_calculator_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :product, "Seleccionar Producto", class: "control-label" %>
      <%= form.collection_select :product_id, Product.all, :id, :name, { prompt: "Selecciona un producto" }, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :buyer, "Seleccionar Comprador", class: "control-label" %>
      <%= form.collection_select :buyer_id, Buyer.all, :id, :name, { prompt: "Selecciona un comprador" }, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.submit 'Calcular Impuesto', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>